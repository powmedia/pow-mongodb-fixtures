#!/usr/bin/env node

var argv = require('optimist').argv,
    path = require('path');

var dbName = argv._[0],
    file = path.resolve(process.cwd(), argv._[1]);

var fixtures = require('pow-mongodb-fixtures').connect(dbName);

fixtures.load(file, function(err) {
  if (err) {
    console.error(err);
    return process.exit(-1);
  }

  process.exit(0);
});
